<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PK Car Broker</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Main Css -->
    <link rel="stylesheet" href="/css/main.css">
</head>

<body>
    <div class="container-fluid my-5">
        <h1 class="text-center">Admin Panel</h1>
        <div class="app-title">
            <div>
                <h1> <%= data.ref %> </h1>
            </div>
            <ul class="app-breadcrumb breadcrumb side">
                <a class="btn btn-outline-primary" href="../../admin/appointments">
                    Back
                </a>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="tile">
                    <div class="tile-body">
                        <dl class="row">
                            <dt class="col-sm-3">Name</dt>
                            <dd class="col-sm-9">
                                <%= data.name %>
                            </dd>
                            <dt class="col-sm-3">Vehicle</dt>
                            <dd class="col-sm-9">
                                <dl class="row">
                                    <dt class="col-sm-2">Brand</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vBrand %>
                                    </dd>
                                    <dt class="col-sm-2">Year</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vYear %>
                                    </dd>
                                    <dt class="col-sm-2">Model</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vModel %>
                                    </dd>
                                    <dt class="col-sm-2">Kilo</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vKilo %>
                                    </dd>
                                    <dt class="col-sm-2">Condition</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vCondition %>
                                    </dd>
                                    <dt class="col-sm-2">Description</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vDescription %>
                                    </dd>
                                    <dt class="col-sm-2">Cost</dt>
                                    <dd class="col-sm-10">
                                        <%= data.vCost %>
                                    </dd>
                                </dl>
                            </dd>
                            <dt class="col-sm-3">Phone</dt>
                            <dd class="col-sm-9">
                                <%= data.phone %>
                            </dd>
                            <dt class="col-sm-3">Location</dt>
                            <dd class="col-sm-9">
                                <%= data.location %>
                            </dd>
                            <dt class="col-sm-3">Date</dt>
                            <dd class="col-sm-9">
                                <%= data.date %>
                            </dd>
                            <dt class="col-sm-3">Time</dt>
                            <dd class="col-sm-9">
                                <%= data.time %>
                            </dd>
                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                <%= data.status %>
                            </dd>
                        </dl>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Scripts -->
    <script src="/js/jquery-3.3.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
</body>

</html>